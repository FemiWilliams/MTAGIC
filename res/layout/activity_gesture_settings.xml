<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:id="@+id/main"
 	android:orientation="vertical"
 	android:minWidth="300dp"
    tools:context=".GestureSettings" >
	
    <TextView
        android:id="@+id/instuctions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/color_instructions"/>
	
	<Button
        android:id="@+id/button_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/next" />

	<LinearLayout
	    android:id="@+id/fourth_row"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/button_color"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="30dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/thick_1"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:gravity="center_vertical|right"
	        android:src="@drawable/line1" />

	    <ImageView
	        android:id="@+id/thick_2"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:gravity="center_vertical|center"
	        android:src="@drawable/line2" />

	    <ImageView
	        android:id="@+id/thick_3"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:gravity="center_vertical|right"
	        android:src="@drawable/line3" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/third_row"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/fourth_row"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="20dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/black_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#000000"
	        android:gravity="center_vertical|left" />

	    <ImageView
	        android:id="@+id/cyan_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#00FFFF"
	        android:gravity="center_vertical|center" />

	    <ImageView
	        android:id="@+id/pink_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#F52887"
	        android:gravity="center_vertical|right" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/second_row"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/third_row"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="20dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/green_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#008000"
	        android:gravity="center_vertical|left" />

	    <ImageView
	        android:id="@+id/blue_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#0000FF"
	        android:gravity="center_vertical|center" />

	    <ImageView
	        android:id="@+id/purple_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#800080"
	        android:gravity="center_vertical|right" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/instructions"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/second_row"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="20dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/red_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#FF0000"
	        android:gravity="center_vertical|left" />

	    <ImageView
	        android:id="@+id/orange_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#FFA500"
	        android:gravity="center_vertical|center" />

	    <ImageView
	        android:id="@+id/yellow_square"
	        android:layout_width="fill_parent"
	        android:layout_height="70dip"
	        android:layout_weight="1"
	        android:background="#FFFF00"
	        android:gravity="center_vertical|right" />
	</LinearLayout>

</RelativeLayout>